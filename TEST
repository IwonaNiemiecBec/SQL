CREATE TABLE GITHUB 
(
  NUMER VARCHAR2(20) NOT NULL , 
  IMIE VARCHAR2(20) NOT NULL , 
  NAZWISKO VARCHAR2(20) NOT NULL ,
  STANOWISKO VARCHAR2(20) NOT NULL , 
  DZIAŁ VARCHAR2(20) NOT NULL , 
  PENSJA_POD INT NOT NULL , 
  PREMIA INT NOT NULL )
  
/
SELECT * FROM GITHUB
/
---DODAWANIE WARTOŚCI DO TABELI ---
INSERT INTO GITHUB (NUMER, IMIE, NAZWISKO, STANOWISKO, DZIAŁ, PENSJA_POD, PREMIA)
VALUES (1,'IWONA', 'NIEMIEC', 'ANALITYK', 'FINANSE', 5000, 500 );
--- DODAWANIE KOLUMNY ---
ALTER TABLE GITHUB ADD PENSJA_PREMIA INT ;
/
--- DODAWANIE W KOLUMNIE WYNIKU Z WARTOŚCI PODANYCH W INNYCH KOLUMNACH --- 
UPDATE GITHUB
/
---USUNIĘCIE KOLUMNY ---
ALTER TABLE GITHUB
DROP COLUMN PENJSA_PREMIA
/

SET PENSJA_PREMIA = PENSJA_POD + PREMIA;
/
